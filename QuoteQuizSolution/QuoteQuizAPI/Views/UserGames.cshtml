@model HistoryModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuoteQuizAPI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="boxer">
        @foreach (var answer in Model.chosenUserHistory)
        {
            <p class="quote">@answer.QuoteText</p>
            var gameResult = answer.IsCorrect ? "correct answer" : "wrong answer";
            <p class="answer">@answer.Username chose the @gameResult</p>
            <br />
        }
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>