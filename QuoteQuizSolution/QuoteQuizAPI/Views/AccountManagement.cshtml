@model QuizModel
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuoteQuizAPI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

<div class="boxer">
    <h1>Change account information:</h1>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label>New Username</label>
                <input type="email" id="mod-userName" value="@Model.User.Username" class="form-control" />
            </div>
            <div class="form-group">
                <label>New First Name</label>
                <input id="mod-firstName" value="@Model.User.FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label>New Last Name</label>
                <input id="mod-lastName" value="@Model.User.LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label>New Password</label>
                <input type="password" minlength="8" id="mod-password" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" onclick="modifyUser(@Model.User.Id)" class="btn btn-primary">Save Changes</button>

            </div>
            <div class="form-group">
                <a asp-controller="User" asp-action="DisableUser" asp-route-userId="@Model.User.Id">Disable User</a>
                <a asp-controller="User" asp-action="DeleteUser" asp-route-userId="@Model.User.Id">Delete User</a>
                <a asp-controller="User" asp-action="LogOut" asp-route-userId="@Model.User.Id">Log Out</a>
            </div>

        </div>

    </div>
</div>

<script src="~/scripts/site.js" asp-append-version="true"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
</body>
